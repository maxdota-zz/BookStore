<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Category List</h1>

<table width="100%">
  <tr class="category">
    <th>Name</th>
    <th colspan="3">Sort order</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr class="category">
    <td><%= category.name %></td>
    <td><%= number_with_precision(category.sort_order, precision: 0) %></td>
    <td>
            <%= link_to image_tag("arrow_down.jpg"), category_down_path(category.id) %>
    </td>
    <td>
            <%= link_to image_tag("arrow_up.jpeg"), category_up_path(category.id) %>   
    </td>
    <td><%= link_to 'Add book', category_display_other_books_path(category) %></td>
    <td><%= link_to 'Remove book', category_display_books_path(category) %></td>
    <td><%= link_to 'Change Name', edit_category_path(category) %></td>
    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path %>
