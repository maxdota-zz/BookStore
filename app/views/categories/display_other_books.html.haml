- if notice
  %p{ :id => "notice" }
    = notice

%h1
  Category
  = @category.name
These books are not in the category
%br
Add them to this category by clicking +
%br
.container
  - @other_books.each do |book|
    .list
      = link_to('+', category_add_book_url(@category.id, book.id), class: "btn btn-info")
      = image_tag(book.photo_url, :class => "list_image")
      %p{ :class => "list_text" }
        = book.title
%p
  = will_paginate @other_books

= link_to 'Back', categories_path