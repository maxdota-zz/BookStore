<h1>Listing books</h1>

<table>

<% @books.each do |book| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= image_tag(book.photo_url, class: 'list_image') %></td>
    <td class="list_description">  
      <dl>
        <dt><%= book.title %></dt>
        <dd><%= truncate(strip_tags(book.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="list_actions">
      <%= link_to 'Show', book %><br/>
      <%= link_to 'Edit', edit_book_path(book) %><br/>
      <%= link_to 'Destroy', book, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

