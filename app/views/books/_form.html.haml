= form_for(@book) do |f| 
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li
            = msg

  .field
    = f.label :title 
    = f.text_field :title 
  .field
    = f.label :description 
    = f.text_area :description, :class => "better_field" 
  .field
    = f.label :author_name 
    = f.text_field :author_name 
  .field
    = f.label :publisher_name 
    = f.text_field :publisher_name 
  .field
    = f.label :published_date 
    = f.date_select(:published_date, :start_year => 1800, :end_year => 2013) 
  .field
    = f.label :unit_price 
    = f.text_field :unit_price 
  .field
    = f.label :photo_url 
    = f.text_field :photo_url 
  .actions
    = f.submit 
