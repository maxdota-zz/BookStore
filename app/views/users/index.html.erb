<h1>User List</h1>

<table>
  <tr>
    <th>Email address</th>
    <th>Username</th>
    <th>Phone</th>
    <th>Full name</th>
    <th>Birthday</th>
    <th>Account creation date</th>
    <th>Activation</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email_address %></td>
    <td><%= user.username %></td>
    <td><%= user.phone %></td>
    <td><%= user.full_name %></td>
    <td><%= user.birthday %></td>
    <td><%= user.account_creation_date %></td>
    <td><%= user.activation %></td>
    <td><%= user.role %></td>
    <td><%= user.active_code %></td>
    <td><%= link_to 'Activate', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

