<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1> Please enter the following information to reset your password </h1> <br />
<%= form_for(@user, :url => {:action => "password_reset"}, method: :post) do |f| %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </div>
  <br />
  <%= show_simple_captcha %> <br />
  <div class="actions">
    <%= f.submit "Reset" %>
  </div>
<% end %>